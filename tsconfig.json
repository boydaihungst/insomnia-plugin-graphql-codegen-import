{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
  },
  "include": ["main.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}